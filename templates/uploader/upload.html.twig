{% extends 'base.html.twig' %}

{% block title %}
    Terms Uploader
{% endblock %}

{% block body %}
    <div class="container">
        <div class=" d-flex flex-column justify-content-center align-items-center mt-5">
            <h1>Reguladmin</h1>

            <form class="mt-4" method="POST" action="{{ path('upload_terms') }}" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="dropdown-menu" class="">SERWIS</label>
                    <div id="dropdown-menu" class="dropdown dropright">
                        <button type="button" class="expand dropdown-toggle form-control" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Wybierz Serwis
                        </button>
                        <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                            <a class="dropdown-item">home</a>
                            <a class="dropdown-item">az</a>
                            <a class="dropdown-item">ionosbg</a>
                            <a class="dropdown-item">ionosro</a>
                            <a class="dropdown-item">ionoshu</a>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label for="date" class="">DATA</label>
                    <input id="date" type="date" class="form-control">
                </div>
                <div class="form-group">
                    <label for="file-name" class="">NAZWA REGULAMINU</label>
                    <input id="file-name" type="text" class="form-control">
                </div>
                <div class="form-group">
                    <label for="file-link" class="">PODGLÄ„D</label>
                    <input id="file-link" type="text" class="form-control">
                </div>
                <div class="form-group">
                    <label id="input-label" class ="btn btn-primary" for="terms">
                        <span class="">Dodaj regulamin PDF</span>
                    </label>

                    <input type="file" class="form-control-file" name="terms" id="terms" onchange="showname()">

                    <button id="submit-button" type="submit" class="btn btn-secondary" disabled>
                        UPLOAD
                    </button>
                </div>
            </form>
        </div>
    </div>
    <footer class="fixed-bottom mb-2">
        <div class="container">
            <span class="d-flex text-muted justify-content-right">Krzysztof Heigel 2020 &reg;</span>
        </div>
    </footer>
{% endblock %}